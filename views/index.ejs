<%- include('./layout/head') %> 
<%- include('./layout/navbar') %> 

<div class="container mt-2">
    <div class="row">
        <div class="col-md-12 mx-auto mt-5">

            <div class="card shadow">
                <div class="card-header">
                    <h3>Home
                        <a href="/add" class="btn btn-primary btn-sm float-end">Add User</a>
                    </h3>
                </div>
                <div class="card-body">

                  <% if (message) { %>
                    <div class="alert alert-success alert-dismissible fade show alert<%= message.type %>" role="alert">
                      <strong><%= message.message %></strong>
                      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                  <% } %>
                  
                  <% if (users != '') { %>
                    <table class="table table-striped table-bordered">
                      <thead>
                        <tr>
                          <th scope="col">ID</th>
                          <th scope="col">Image</th>
                          <th scope="col">Name</th>
                          <th scope="col">E-mail</th>
                          <th scope="col">Phone</th>
                          <th scope="col">Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% users.forEach((row,index) => { %>
                          <tr class="table-white align-middle">
                            <th scope="row"><%= index %></th>
                            <td><img src="<%= row.image %> " width="50px" class="img-thumbnail" alt="img"></td>
                            <td><%= row.name %> </td>
                            <td><%= row.email %> </td>
                            <td><%= row.phone %> </td>
                            <td>
                                <a href="/edit/<%= row._id %>" class="text-success">Edit</a>
                                <a href="/delete/<%= row._id %>" class="text-danger">Delete</a>
                            </td>
                          </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  <% } else{ %>
                    <h1 class="text-center text-secondary mt-5">No users found in the databases</h1>
                    <% } %> 
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('./layout/footer') %> 